<p id="notice"><%= notice %></p>

<h1>Listing Garages</h1>

<table>
  <thead>
    <tr>
      <th>Location</th>
      <th>Size</th>
      <th>Color</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @garages.each do |garage| %>
      <tr>
        <td><%= garage.location %></td>
        <td><%= garage.size %></td>
        <td><%= garage.color %></td>
        <td><%= garage.user_id %></td>
        <td><%= link_to 'Show', garage %></td>
        <td><%= link_to 'Edit', edit_garage_path(garage) %></td>
        <td><%= link_to 'Destroy', garage, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

